{
    "$id": "https://github.com/dgwnu/ng-joint-schematics/blob/master/src/data/ng-joint-schematic-data-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema to store and retrieve NgJoint Schematic Data to create shapes etc..",
    "type": "object",
    "properties": {
        "defaults": { "$ref": "#/definitions/NgJointDefaults" },
        "shapes": { "$ref": "#/definitions/NgJointShapeTypes" }
    },
    "additionalProperties": false,

    "definitions": {

        "NgJointDefaults": {
            "type": "object",
            "description": "Global defaults.",
            "properties": { 
                "importMappings": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/NgJointImportMapping" }
                }
            },
            "additionalProperties": false
        },

        "NgJointShapeTypes": {
            "type": "object",
            "description": "Defined shape types.",
            "additionalProperties": { "$ref": "#/definitions/NgJointShapeType" }   
        },

        "NgJointImportMapping": {
            "type": "object",
            "description": "Mapping of symbols (namespaces, classes or types) to Import",
            "properties": {
                "importSymbols": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "fromPath": {
                    "type": "string"
                }
            },
            "required": [
                "importSymbols",
                "fromPath"
            ],
            "additionalProperties": false
        },

        "NgJointShapeType": {
            "type": "object",
            "description": "Shape type (standard, uml, angular, ...etc.)",
            "properties": {
                "defaults": { "$ref": "#/definitions/NgJointShapeTypeDefaults" },
                "elements": { "$ref": "#/definitions/NgJointShape" },
                "links": { "$ref": "#/definitions/NgJointShape" }
            },
            "required": [
                "defaults"
            ],
            "additionalProperties": false
        },

        "NgJointShapeTypeDefaults": {

        },

        "NgJointShape": {

        }

    }

}